{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"type": "shell",
			"windows": {
				"command": "${workspaceFolder}\\build.bat",
				"problemMatcher": "$msCompile"
			},
			"linux": {
				"command": "${workspaceFolder}/build.sh",
				"problemMatcher": "$gcc"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}